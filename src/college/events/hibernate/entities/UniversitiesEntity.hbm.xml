<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="college.events.hibernate.entities.UniversitiesEntity" table="UNIVERSITIES" schema="APP">
        <id name="uniId">
            <column name="UNI_ID" sql-type="varchar(255)"/>
        </id>
        <property name="name">
            <column name="NAME" sql-type="varchar(255)"/>
        </property>
        <property name="location">
            <column name="LOCATION" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="descritpion">
            <column name="DESCRITPION" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="students">
            <column name="STUDENTS" sql-type="integer"/>
        </property>
    </class>
</hibernate-mapping>