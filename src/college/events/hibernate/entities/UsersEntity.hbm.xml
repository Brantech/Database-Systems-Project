<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="college.events.hibernate.entities.UsersEntity" table="USERS" schema="APP">
        <id name="userId">
            <column name="USER_ID" sql-type="varchar(255)"/>
        </id>
        <property name="firstname">
            <column name="FIRSTNAME" sql-type="varchar(255)"/>
        </property>
        <property name="lastname">
            <column name="LASTNAME" sql-type="varchar(255)"/>
        </property>
        <property name="username">
            <column name="USERNAME" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="password">
            <column name="PASSWORD" sql-type="clob(512)"/>
        </property>
        <property name="email">
            <column name="EMAIL" sql-type="varchar(255)"/>
        </property>
        <property name="userType">
            <column name="USER_TYPE" sql-type="varchar(20)" length="20"/>
        </property>
    </class>
</hibernate-mapping>