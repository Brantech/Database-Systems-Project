<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="college.events.hibernate.entities.CommentEntity" table="COMMENT" schema="APP">
        <id name="id">
            <column name="ID" sql-type="varchar(255)"/>
        </id>
        <property name="title">
            <column name="TITLE" sql-type="varchar(255)"/>
        </property>
        <property name="message">
            <column name="MESSAGE" sql-type="varchar(255)"/>
        </property>
        <property name="eventID">
            <column name="EVENT_ID" sql-type="varchar(255)"/>
        </property>
        <property name="userID">
            <column name="USER_ID" sql-type="varchar(255)"/>
        </property>
    </class>
</hibernate-mapping>