<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="college.events.hibernate.entities.EventsEntity" table="EVENTS" schema="APP">
        <id name="eventId">
            <column name="EVENT_ID" sql-type="integer"/>
        </id>
        <property name="name">
            <column name="NAME" sql-type="varchar(255)"/>
        </property>
        <property name="type">
            <column name="TYPE" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="category">
            <column name="CATEGORY" sql-type="varchar(255)"/>
        </property>
        <property name="description">
            <column name="DESCRIPTION" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="time">
            <column name="TIME" sql-type="varchar(255)"/>
        </property>
        <property name="date">
            <column name="DATE" sql-type="varchar(255)"/>
        </property>
        <property name="location">
            <column name="LOCATION" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="contactPhone">
            <column name="CONTACT_PHONE" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="contactEmail">
            <column name="CONTACT_EMAIL" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="uniId">
            <column name="UNI_ID" sql-type="varchar(255)"/>
        </property>
    </class>
</hibernate-mapping>